@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/StudentLayout.cshtml";
}
<div style="background-color:white; border:1px solid green;margin:0px 50px; padding-left:120px;width:600px">
    <div class="container" style="margin:20px">
        <form>
            <div class="form-group">
                <label>Old Password:</label>
                <input type="password" class="form-control" id="OldPassword">
            </div>
            <div class="form-group">
                <label>New Password:</label>
                <input type="password" class="form-control" id="NewPassword">
            </div>
            <div class="form-group">
                <label>Confirm Password:</label>
                <input type="password" class="form-control" id="Confirm Password">
            </div>
            <div class="form-group" id="submit">
                <button type="button" class="btn btn-info">Submit</button>
            </div>
            <div class="container" style="margin-left:-20px">
                <label  data-toggle="tooltip" title="Atleast 1 uppercase , 1 lowercase , 1 numerical , 1 special character and minimum 8 character long.">Password Policy</label>
            </div>

            <script>
                $(document).ready(function(){
                    $('[data-toggle="tooltip"]').tooltip();
                });
            </script>
        </form>
    </div>

</div>