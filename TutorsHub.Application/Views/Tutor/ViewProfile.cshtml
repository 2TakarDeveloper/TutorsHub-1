
@model Entity.UserModels.Tutor
@{
    ViewBag.Title = "ViewProfile";
    Layout = "~/Views/Shared/TutorLayout.cshtml";
}

<html>
<head>

    <title>Profile</title>
    <meta name="viewport" content="width=device-width, initial-scale=.9">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

</head>



<body>
    <div class="row">
        <div class="col-sm-2">

        </div>
        <div class="col-lg-8">

            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-5" style="padding-right: 0px;width: 175px;">
                            Profile
                        </div>
                    </div>
                </div>
                <div class="panel-body">

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="well well-sm" style="background-color:#5bc0de;">
                                Personal Info
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-4">
                            <img class="img-rouunded" src="https://scontent.fdac6-1.fna.fbcdn.net/v/t1.0-1/p160x160/14522999_10207289285486077_5577078775528197936_n.jpg?oh=01b56afc02e7b410e87a9c8bae27ac74&oe=5A91437B">
                        </div>
                        <div class="col-lg-5">
                            <div class="row">
                                <div class="col-4">
                                    <label>Name:</label> <label>@Model.Name</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4">
                                    <label>Current Status:</label> <span style="color:green;"><strong>@Model.Status</strong></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4">
                                    <label>Member Since:</label>@Model.MemberSince
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4">
                                    <label>Last Active:</label> @Model.LastActive  ago
                                </div>


                            </div>
                            <div class="row">
                                <div class="col-4">
                                    <label>Level:</label> <span class="glyphicon glyphicon-star"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4">
                                    <label>Experience:</label> @Model.Experience Year
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4">
                                    <label>Studied At:</label> American International University-Bangladesh
                                </div>
                            </div>
                           
                        </div>
                        <div class="col-lg-2">
                            <a href="/Tutor/EditProfile" class="btn btn-info">Edit Profile</a>
                        
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="well well-sm" style="background-color:#5bc0de;">
                                Tution Info
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <table >
                                <tr style="height: 45px" >
                                    <td><label>Expected Salary: </label></td>
                                    <td>@Model.ExpectedSalary TK/HRS</td>
                                </tr>
                                <tr style="height: 45px">
                                    <td><label>Preferred Medium: </label></td>
                             
                                    @{
                                        foreach (var item in Model.PreferredMedium)
                                        {
                                            <td>@item</td>
                                        }
                                    }
                                </tr>                             
                                <tr style="height: 45px">
                                    <td><label>Preferred Classes: </label></td>
                                    
                                    @{
                                        foreach (var item in Model.PreferredClasses)
                                        {
                                            <td>@item</td>
                                        }
                                    }
                                </tr>                            
                                <tr style="height: 45px">
                                    <td><label>Preferred Subjects: </label> </td>
                                    @{
                                        foreach (var item in Model.PreferredSubjects)
                                        {
                                            <td>@item.Name</td>
                                        }
                                    }

                                </tr>
                              
                                <tr style="height: 45px">
                                    <td><label>Preferred Areas: </label> </td>
                                  
                                    @{
                                        foreach (var item in Model.PreferredLocations)
                                        {
                                            <td>@item.Name</td>
                                        }
                                    }
                                </tr>
                            </table>
                        </div>
                    </div>

                </div>
                

            </div>
        </div>
    </div>




</body>
</html>


