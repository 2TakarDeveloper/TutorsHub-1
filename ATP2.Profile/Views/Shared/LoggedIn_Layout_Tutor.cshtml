
<!DOCTYPE html>

<html>
<head>
    
    <style>
       

        /* The container <div> - needed to position the dropdown content */
        .dropdown {
            position: relative;
            display: inline-block;
        }

        /* Dropdown Content (Hidden by Default) */
        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

        /* Links inside the dropdown */
        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

        /* Change color of dropdown links on hover */
        .dropdown-content a:hover {background-color: #f1f1f1}

        /* Show the dropdown menu on hover */
        .dropdown:hover .dropdown-content {
            display: block;
        }

        /* Change the background color of the dropdown button when the dropdown content is shown */
        /*.dropdown:hover .dropbtn {
            background-color: #3e8e41;
        }*/


    </style>

    <meta name="viewport" content="width=device-width"/>
    <title>Public_Layout</title>
</head>
<body>
<div>
    <table width="100%" align="center" cellspacing="0" cellpadding="10" border="1">
        <tr>
            <td colspan="2" valign="middle" height="70">
                <table width="100%">
                    <tr>
                        <td>
                            <a href="#">
                                <img height="48" src="../image/logo.png">
                            </a>
                        </td>
                        <td align="right">
                            Logged in as <a href="#">@Session["UserName"]</a>&nbsp;|
                            @Html.ActionLink("Logout", "Index", "Home")
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td width="190" valign="top">
                <b>&nbsp;Account</b><hr/>
                <menu>
                    <li>@Html.ActionLink("DashBoard", "Dashboard", "Account")</li>
                    <li>@Html.ActionLink("View Profile", "UserProfile", "Account")</li>
                    <li>@Html.ActionLink("Edit Profile", "EditProfile", "Account")</li>
                    <li>@Html.ActionLink("Change Password", "EditPassword", "Account")</li>
         
                </menu>
                <b>&nbsp;Exam</b><hr/>
                <menu>
                    <li>@Html.ActionLink("Results", "Result", "Exam")</li>
                    <li>@Html.ActionLink("Ranking", "Ranking", "Exam")</li>
                    <li>
                    
                        <div class="dropdown">
                            Subjects
                            <div class="dropbtn">
                                <div class="dropdown-content">
                                   @Html.ActionLink("Bangla", "Exam", "Exam")
                                   @Html.ActionLink("English", "Exam", "Exam")
                                   @Html.ActionLink("Math", "Exam", "Exam")
                                   @Html.ActionLink("Physics", "Exam", "Exam")
                                </div>
                            </div>
                        </div>
                    </li>
                    

                </menu>


            </td>
            <td valign="top">
                @RenderBody()
            </td>
        </tr>
        <tr>
            <td colspan="2" align="center">
                Copyright &copy; 2017
            </td>
        </tr>
    </table>
</div>
</body>
</html>
