@using Entity.UserModels
@model ATP2.Profile.Models.AccountModels.EditPasswordModel
    

@{
    var r = (Role)Session["Role"];
    switch (r)
    {
        case Role.Admin:
            Layout = "../Shared/Loggedin_Layout.cshtml"; 
            break;
        case Role.Executive:
            break;
        case Role.Tutor:
            Layout = "../Shared/Loggedin_Layout_Tutor.cshtml";
            break;
        case Role.Guest:
            break;
        default:
            throw new ArgumentOutOfRangeException();
    }
   
}

<fieldset>
    <legend><b>CHANGE PASSWORD</b></legend>
    <form method="post">
        <table>
            <tr>
                <td><font size="3">Current Password</font></td>
                <td>:</td>
                <td><input type="password" name="CurrentPassword" /></td>
                <td style="color: red">@Html.ValidationMessageFor(a=>a.CurrentPassword)</td>
            </tr>
            <tr>
                <td><font size="3" color="green">New Password</font></td>
                <td>:</td>
                <td><input type="password" name="NewPassword" /></td>
                <td style="color: red">@Html.ValidationMessageFor(a=>a.NewPassword)</td>
            </tr>
            <tr>
                <td><font size="3" color="red">Retype New Password</font></td>
                <td>:</td>
                <td><input type="password" name="RNewPassword" /></td>
                <td style="color: red">@Html.ValidationMessageFor(a=>a.RNewPassword)</td>
            </tr>
        </table>
        
        <hr />
        <input type="submit" value="Submit" />
    </form>
</fieldset>