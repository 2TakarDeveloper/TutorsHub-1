
@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <style media="screen">
       
        .card {
            width: 80%;
        }

        input {
            margin-bottom: 5px;
        }

        table {
            font-size: 20px;
        }
        
    </style>

</head>
<body>
    <div class="row">
        <div class="col-sm-2">

        </div>
        <div class="col-sm-10">
            <div class="panel panel-info card">
                <div class="panel-heading">
                    EDIT PROFILE
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-4">
                            <img class="img-rouunded imgpro" src="https://scontent.fdac6-1.fna.fbcdn.net/v/t1.0-1/p160x160/14522999_10207289285486077_5577078775528197936_n.jpg?oh=01b56afc02e7b410e87a9c8bae27ac74&oe=5A91437B">
                        </div>  
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-lg-12">
                                    <input type="text" class="form-control" placeholder="Name">
                                </div>
                            </div>
                        
                            <div class="row">
                                <div class="col-lg-12">
                                    <input type="email" class="form-control" placeholder="Email" disabled="disabled" value="sajib@tutorshub">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-9">
                                    <input type="text" class="form-control" placeholder="Profile Picture URL">
                                </div>
                                <div class="col-lg-2">
                                    <button class="btn btn-info">View</button>
                                </div>
                            </div>
                                
                            <div class="row">
                                <div class="col-lg-3">
                                    <input type="radio">Male
                                </div>
                                <div class="col-lg-3">
                                    <input type="radio">Female
                                </div>
                            </div>
                               
                            <div class="row">
                                <div class="col-lg-3">
                                    <label>Birthdate</label>
                                </div>
                                <div class="col-lg-9">
                                    <input type="date" class="form-control" placeholder="Birthday">

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <input type="number" class="form-control" placeholder="Mobile Number">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <input type="text" class="form-control" placeholder="Address">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12">

                                    <input type="submit" class="form-control" style="background-color:gainsboro; color:black" value="Submit">

                                </div>
                            </div>
                                
                             
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</body>
</html>

