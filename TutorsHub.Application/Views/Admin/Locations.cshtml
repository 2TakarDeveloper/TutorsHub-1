@model TutorsHub.Application.Models.LocationsViewModel
@{
    ViewBag.Title = "Locations";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <style media="screen">
        .card {
            width: 80%;
        }

        input {
            margin-bottom: 5px;
        }

        table {
            font-size: 20px;
        }
    </style>

</head>
<body>
    <div class="row">
        <div class="col-sm-2">

        </div>
        <div class="col-sm-10">
            <div class="panel panel-info card">
                <div class="panel-heading">
                    LOCATIONS
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-3">

                        </div>
                        <form method="post">
                            <div class="col-sm-4">
                                <input name="NewLocation.Name" type="search" class="form-control" value="@Model.NewLocation.Name">
                            </div>
                     
                        <div class="col-sm-2">
                            <input type="submit" class="form-control btn-info" value="Add">
                        </div>
                        </form>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">

                        </div>
                        <div class="col-sm-8">
                            <div class="table-responsive">
                                <form method="post">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Loction</th>
                                                <th>Edit</th>
                                                <th>Remove</th>
                                            </tr>
                                        </thead>
                                        <tbody id="myTable">

                                            @for (int i = 0; i < Model.Locations.Count; i++)
                                            {
                                                <tr>
                                                    <td>@Model.Locations[i].Name</td>
                                                    <td><a href="@Url.Action("Locations","Admin", new { id = Model.Locations[i].Id } )"><span class="glyphicon glyphicon-edit"></span></a></td>
                                                    <td><a href="@Url.Action("Locations","Admin", new {id=Model.Locations[i].Id } )"><span class="glyphicon glyphicon-remove"></span></a></td>
                                                </tr>
                                            }

                                        </tbody>

                                    </table>
                                    </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>


