@using Entity.QuestionModels
@model TutorsHub.Application.Models.QuestionsViewModel
@{
    ViewBag.Title = "Question";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <style>
        table {
            width: 716px; /* 140px * 5 column + 16px scrollbar width */
            border-spacing: 0;
        }

        tbody, thead tr {
            display: block;
        }

        tbody {
            height: 400px;
            overflow-y: auto;
            overflow-x: hidden;
        }

            tbody td, thead th {
                width: 140px;
            }

                thead th:last-child {
                    width: 156px; /* 140px + 16px scrollbar width */
                }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>
<body>
    <div style="background-color:white; margin:0px 50px; border:1px solid green; width:90%">
        <div style="padding: 25px;">
            <form method="post" enctype="multipart/form-data">
                <input name="file" class="form-control in" type="file" style="width: 50%" />
                <br />
                <input type="submit" class="form-control btn-info" value="Upload File" style="width: 20%" />
            </form>
            <br />
            <form action="/Admin/DownloadQuestion">
                <input type="submit" class="form-control btn-success" value="Download" style="width: 20%" />
            </form>

        </div>

        <div>
            <table class="table table-hover" style="width:95%; margin-left:30px">
                <thead>
                    <tr>
                        <th>SID</th>
                        <th>Subject</th>
                        <th>ID</th>
                        <th>Question</th>
                        <th>A</th>
                        <th>B</th>
                        <th>C</th>
                        <th>D</th>
                        <th>Answer</th>
                        <th>Difficulty</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var question in Model.Questions)
                    {
                    <tr>
                        <td>@question.Sl</td>
                        <td>@question.Subject</td>
                        <td>@question.Id</td>
                        <td>@question.Q</td>
                        <td>@question.A</td>
                        <td>@question.B</td>
                        <td>@question.C</td>
                        <td>@question.D</td>
                        <td>@question.Answer</td>
                        <td><strong>@question.Difficulty</strong></td>
                    </tr>
                    }



                </tbody>
            </table>
        </div>
    </div>
</body>
</html>

<script>
    // Change the selector if needed
    var $table = $('table'),
        $bodyCells = $table.find('tbody tr:first').children(),
        colWidth;

    // Get the tbody columns width array
    colWidth = $bodyCells.map(function () {
        return $(this).width();
    }).get();

    // Set the width of thead columns
    $table.find('thead tr').children().each(function (i, v) {
        $(v).width(colWidth[i]);
    });
    // Adjust the width of thead cells when *window* resizes
    $(window).resize(function () {
        /* Same as before */
    }).resize(); // Trigger the resize handler once the script runs
</script>

