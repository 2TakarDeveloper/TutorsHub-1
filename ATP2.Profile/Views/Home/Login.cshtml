@using System.Web.UI.WebControls
@using Entity.UserModels

@model ATP2.Profile.Models.HomeModels.LoginModel

@{
    Layout = "~/Views/Shared/Public_Layout.cshtml";
    
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<style>
    a {
        text-decoration: none;
        font-weight: 700;
    }

        a:hover {
            color: #f4511e;
        }

    td {
        margin-bottom: 10px;
        padding: 10px;
    }

</style>



<fieldset>
    <legend>
        <b>LOGIN</b>
    </legend>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
    

        <div class="label">
            @Html.LabelFor(e => e.Email)
        </div>
        <div class="input-lg">
            @Html.EditorFor(e => e.Email)
        </div>
        <div class="label">
            @Html.LabelFor(e => e.Password)
        </div>
        <div class="input-lg">
            @Html.PasswordFor(e => e.Password)
        </div>

        <div style="color: red">
            @Html.ValidationSummary()
        </div>
        <hr/>
        
        <div >
            @Html.LabelFor(e => e.RememberMe)
            @Html.CheckBoxFor(e=>e.RememberMe)
            <input type="submit" value="Log In">
        </div>
        
        @Html.ActionLink("Forgot Password?", "ForgotPassword", "Home")
    }
        
        
      
       
      

</fieldset>