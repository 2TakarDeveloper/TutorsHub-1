@model Entity.UserModels.Admin
@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        function viewImage() {
            document.getElementById("ImagePlaceHolder").src = document.getElementById("imageUrl").value;
            console.log("Called");
            return false;
        }

    </script>


    <style media="screen">

        .card {
            width: 80%;
        }

        input {
            margin-bottom: 5px;
        }

        table {
            font-size: 20px;
        }
    </style>

</head>
<body>
    <div class="row">
        <div class="col-sm-2">

        </div>
        <div class="col-sm-10">
            <div class="panel panel-info card">
                <div class="panel-heading">
                    EDIT PROFILE
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-4">
                            <img class="img-rouunded imgpro" src="@Model.ProfilePictureUrl" id="ImagePlaceHolder" style="height: 250px;" />
                        </div>
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-lg-12">
                                    <input type="text" class="form-control" placeholder="Name">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <input type="email" class="form-control" placeholder="Email" disabled="disabled" value="@Model.Email">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-9">
                                    <input type="text" class="form-control" placeholder="Profile Picture URL">
                                </div>
                                <div class="col-lg-2">
                                    <button class="btn btn-info" onclick="viewImage(this)">View</button>
                                </div>
                            </div>

                            <div class="row" style="padding-top:5px; margin-left:1px; padding-bottom:5px;">

                                <div class="form-control">
                                    <strong>
                                        Gender :
                                    </strong>
                                    @Html.RadioButtonFor(m => Model.Gender, "Male")
                                    @Html.Label("Male")
                                    @Html.RadioButtonFor(m => Model.Gender, "Female")
                                    @Html.Label("Female")
                                </div>

                                <br />
                            </div>

                            <div class="row">
                                <div class="col-lg-3">
                                    <label>Birthdate</label>
                                </div>
                                <div class="col-lg-9">
                                    <input type="date" class="form-control" placeholder="Birthday" value="@Model.DateOfBirth">

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <input type="number" class="form-control" placeholder="Mobile Number" value="@Model.Mobilenumber">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <input type="text" class="form-control" placeholder="Address" value="@Model.Address">
                                </div>
                            </div>




                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">

                <!--<input type="submit" class="form-control" style="background-color:gainsboro; color:black" value="Submit">-->
                <button type="submit" class="btn btn-info" style="float: right">Submit</button>
                <script>
                    function myFunction() {
                        window.location.href = "/student/ViewProfile";
                    }
                </script>

            </div>
        </div>
    </div>
    
</body>
</html>

