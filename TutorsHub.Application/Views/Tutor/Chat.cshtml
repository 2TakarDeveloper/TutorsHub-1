@model TutorsHub.Application.Models.ChatViewModel
@{
    ViewBag.Title = "Chat";
    Layout = "~/Views/Shared/TutorLayout.cshtml";
}

<br />
<br />
<form method="post">
<div style="background-color:white; border:1px solid green;margin-left:53px; padding-left:50px; width:70%;">
    <div class="container" style="margin-top:20px;">
        <div class="form-group" style="width:50%">
            <select name="UserKey" class="form-control" id="sel1">
                @foreach (var user in Model.Users)
                {
                    <option value="@user.Email">@user.Name</option>
                   
                }
            </select>
           
          
        </div>
        <div class="form-group" id="body">
            <textarea name="Message" rows="14" cols="78" placeholder="Write here..."></textarea>
        </div>
        <button type="submit" class="btn btn-info" style="margin-left:512px">Send</button>
        <br />
        <br />
    </div>
</div>
</form>