
@model Entity.UserModels.Tutor
@{
    ViewBag.Title = "ViewProfile";
    Layout = "~/Views/Shared/TutorLayout.cshtml";
}

<html>
<head>
    <title>Profile</title>
    <meta name="viewport" content="width=device-width, initial-scale=.9">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    
</head>
<body>
    <div class="row">
        <div class="col-sm-2">

        </div>
        <div class="col-lg-8">

            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-5" style="padding-right: 0px;width: 175px;">
                            Profile
                        </div>
                    </div>
                </div>
                <div class="panel-body">

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="well well-sm" style="background-color:#5bc0de;">
                                Personal Info
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-4">
                            <img class="img-rouunded" src="https://scontent.fdac6-1.fna.fbcdn.net/v/t1.0-1/p160x160/14522999_10207289285486077_5577078775528197936_n.jpg?oh=01b56afc02e7b410e87a9c8bae27ac74&oe=5A91437B">
                        </div>
                        <div class="col-lg-5">
                            <div class="row">
                                <div class="col-4">
                                    <label>Name:</label> <label>@Model.Name</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4">
                                    <label>Current Status:</label> <span style="color:green;"><strong>@Model.Status</strong></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4">
                                    <label>Member Since:</label> <abbr title="1/12/2015">2 Years</abbr>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4">
                                    <label>Last Active:</label> 2 days ago
                                </div>


                            </div>
                            <div class="row">
                                <div class="col-4">
                                    <label>Level:</label> <span class="glyphicon glyphicon-star"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4">
                                    <label>Experience:</label> @Model.Experience Year
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4">
                                    <label>Studied At:</label> American International University-Bangladesh
                                </div>
                            </div>
                           
                        </div>
                        <div class="col-lg-2">
                            @Html.ActionLink("Edit", "EditProfile","Tutor", null,new { @class = "btn btn-info" })
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="well well-sm" style="background-color:#5bc0de;">
                                Tution Info
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <table>
                                <tr>
                                    <td><label>Expected Salary: </label></td>
                                    <td>5000 TK/HRS</td>
                                </tr>
                                <tr>
                                    <td><br></td>
                                </tr>
                                <tr>
                                    <td><label>Preferred Medium: </label></td>
                                    <td>English</td>
                                </tr>
                                <tr>
                                    <td><br></td>
                                </tr>
                                <tr>
                                    <td><label>Preferred Classes: </label></td>
                                    <td>9-12</td>
                                </tr>
                                <tr>
                                    <td><br></td>
                                </tr>
                                <tr>
                                    <td><label>Preferred Subjects: </label> </td>
                                    <td> Accounting</td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td>Economics</td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td>Bussiness Math</td>
                                </tr>
                                <tr>
                                    <td><br></td>
                                </tr>
                                <tr>
                                    <td><label>Preferred Areas: </label> </td>
                                    <td>Bashundhara</td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td>Gulshan</td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td>Uttara</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                </div>
                

            </div>
        </div>
    </div>




</body>
</html>


