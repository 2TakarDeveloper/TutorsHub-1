@{
    ViewBag.Title = "Send Message";
    Layout = "~/Views/Shared/StudentLayout.cshtml";
}
<div style="background-color:white; border:1px solid green;margin:0px 50px; padding-left:50px; width:700px">
    <div class="container" style="margin-top:20px">
        <div class="form-group">
            <input class="form-control input-sm" id="to" type="email" placeholder="To:">
            <br/>
            <input class="form-control input-sm" id="subject" type="text" placeholder="Subject:">
            <br/>
        </div>
        <div class="form-group" id="body">
            <textarea rows="14" cols="100" placeholder="Write here..."></textarea> 
        </div>
    </div>
</div>
