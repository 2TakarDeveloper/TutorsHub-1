@model Entity.UserModels.Tutor

@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/TutorLayout.cshtml";
}
<html>
<h2>EditProfile</h2>

<head>


</head>




<body>

    <form method="Post">

        <fieldset>
            <legend>
                <b>Edit Profile</b>
            </legend>
            <div class="container">



                <div align="center">

                    <table style="width: 100%">

                        <tr>
                            <td id="left">

                                <!-- Image url -->

                                <img id="image" src="@Model.ProfilePictureUrl" width="150" height="150" />
                                <br><br>
                                <label> Image URL </label>
                                <input type="text" name="image_URL" value="@Model.ProfilePictureUrl" />
                                <button id="img_submit">View</button>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label> Name </label>
                                <input type="text" name="name" value="@Model.Name" size="25" />

                                <label> Email </label>
                                <input type="text" name="email" value="@Model.Email" size="25" />


                                <label> Phone No. </label>
                                <input type="text" name="phone" value="@Model.Mobilenumber" size="25" />

                                <label> Address </label>
                                <input type="text" name="address" value="@Model.Address" size="25" />
                                <div id="gender">
                                    <table>
                                        <label> Gender</label>
                                        <tr>
                                            <td class="control-group">
                                                <label class="control control--radio">
                                                    <input type="radio" name="gender" value="Male" checked="@Model.MaleChecked">Male
                                                    <div class="control__indicator"></div>
                                                </label>
                                            </td>
                                            <td class="control-group">
                                                <label class="control control--radio">
                                                    <input type="radio" name="gender" value="Female" checked="@Model.FemaleChecked">Female
                                                    <div class="control__indicator"></div>
                                                </label>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
                <h2 align="left">Additional </h2>

                <div align="left">
                    <table>
                        <tr>
                            <td>
                                <label> Bio </label>
                                <textarea name="bio" cols="27" rows="5">@Model.Bio</textarea>
                                <br>
                            </td>
                        </tr>
                    </table>
                    <br>
                    <table>
                        <tr>
                            <label> Currtent Status </label>
                            <td>
                                <input type="text" name="status" value="@Model.CurrentStatus" size="25" />
                            </td>
                        </tr>
                    </table>
                    <br>
                    <table>
                        <label> Preferred Medium </label>
                        <tr>
                            <td class='control-group'><label class='control control--checkbox'><input type='checkbox' name="" value="">Bangla<div class='control__indicator'></div></label></td>
                            <td class='control-group'><label class='control control--checkbox'><input type='checkbox' name="" value="">English<div class='control__indicator'></div></label></td>

                        </tr>
                    </table>
                    <br>
                    <table style="width: auto">
                        <label style="width: auto">Preferred Locations </label>
                        <tr>
                            @for (int i = 1; i <= 12; i++)
                            {
                                <td class='control-group'><label class='control control--checkbox'><input type='checkbox' name="@i" value="@i">class @i<div class='control__indicator'></div></label></td>
                            }
                    </table>

                    <br>
                    <table style="width: auto">
                        <label> Preferred Classes </label>
                        <tr>
                            @for (int i = 1; i <= 12; i++)
                            {
                                <td class='control-group'><label class='control control--checkbox'><input type='checkbox' name="@i" value="@i">class @i<div class='control__indicator'></div></label></td>
                            }

                    </table>
                    <br>
                    <table>
                        <label> Expected Salary </label>
                        <tr>
                            <td>
                                <input type="text" name="ExpectedSalary" value="@Model.ExpectedSalary" size="20" /> <span> /hour </span>
                            </td>
                        <tr>
                    </table>
                </div>
                <br>
                <br>
                <div class="box">
                    <input class="btn" type="submit" value="Save">
                </div>
            </div>

        </fieldset>
    </form>


</body>
</html>