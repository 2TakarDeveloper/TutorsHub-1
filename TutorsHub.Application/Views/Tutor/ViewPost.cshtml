@model Entity.BlogModel.Blog
@{
    ViewBag.Title = "ViewPost";
    Layout = "~/Views/Shared/TutorLayout.cshtml";
}

<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <!--<meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">-->

    <title>post</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="../../Content/bootstrap.min.css" rel="stylesheet">
    <!--<link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">-->
   
</head>

<body style="background:white;">

    <div class="section-blog-post" style=" color:black;">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="post-container">


                        <h1 style="color:black">@Model.Title</h1>

                        <span class="by" style="color:black">
                            Posted by
                            <strong>@Model.Author</strong> on
                            <strong>@Model.Date.ToString("D")</strong>
                        </span>
                        <div class="post-body" style="color:black">
                            <p>
                                @Html.Raw(Model.Content)                             
                            </p>
                        </div>

                     
                        <div id="disqus_thread"></div>
                        <script type="text/javascript">
                        /* * * CONFIGURATION VARIABLES * * */
                        var disqus_shortname = 'buttercms';

                        /* * * DON'T EDIT BELOW THIS LINE * * */
                        (function () {
                            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                        })();
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>


